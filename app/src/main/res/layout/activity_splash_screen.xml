<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_intro_holder"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/firebase_logo"
                android:drawableStart="@drawable/firebase_logo"
                android:text="@string/firebase_database"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_firebase_database"
                android:gravity="center"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_firebase_database"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:text="@string/control"
                android:id="@+id/tv_control"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</io.codetail.widget.RevealFrameLayout>

